# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.ts]
quote_type = single

[*.md]
max_line_length = off
trim_trailing_whitespace = false

# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file


# Newline character
# end_of_line = lf



# TypeScript-specific settings
# [*.ts]
# Enforce semicolons at the end of statements
semicolon = true


# Enforce consistent spacing around type annotations
space_before_type_colon = true
space_after_type_colon = true

# Enforce consistent spacing inside object literal braces
space_after_opening_brace_in_object_literal = true
space_before_closing_brace_in_object_literal = true
space_after_comma_in_object_literal = true

# Enforce consistent spacing inside array literal braces
space_after_opening_square_bracket = true
space_before_closing_square_bracket = true
space_after_comma_in_array_literal = true
